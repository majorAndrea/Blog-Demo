<% layout("/layouts/boilerplate.ejs") %>
    <% for (post of posts) { %>
        <article class="card mb-4 overflow-hidden bg-light shadow">
            <div class="row g-0">
                <div class="col-12 col-md-12 col-lg-5 col-xl-4">
                    <img src="<%= post.image.path %>" alt="Image of the Post" class="w-100 h-100">
                </div>
                <section class="col-lg">
                    <div class="card-body d-flex flex-column h-100">
                        <div class="text-break">
                            <h3 class="card-title">
                                <%= post.title %>
                            </h3>
                            <p class="card-text fs-6 overflow-scroll mb-3">
                                <%= post.text.substring(0, 240) %>...
                            </p>
                        </div>
                        <div class="d-flex justify-content-between mt-auto">
                            <a href="/posts/<%= post._id %>" class="card-link btn btn-sm btn-outline-primary">Read
                                More</a>
                            <p class="card-text align-self-end"><small class="text-muted">Created on <strong
                                        class="text-primary">
                                        <%= post.retriveDate() %>
                                    </strong></small></p>
                        </div>
                    </div>
                </section>
            </div>
        </article>
        <% } %>