<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Blog Demo is a blog where people can publish posts and comments to the posts and have their personal profiles."/>
    <meta name="keywords" content="blog, posts, comments, profiles, beautiful places"/>
    <meta name="author" content="Andrea Marloni" />
    <meta name="copyright" content="Andrea Marloni" />
    <title>Blog Demo</title>
    <!-- DNS prefetch -->
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net"/>
    <link rel="dns-prefetch" href="https://api.mapbox.com"/>
    <!-- Origin Preconnect -->
    <link rel="preconnect" href="https://api.mapbox.com">
    <!-- FAVICON -->
    <link rel="icon" type="image/png" sizes="32x32" href="/static/images/favicon/favicon-96x96.png">
    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">

    <% if (urlPath==="/" ) { %>
        <link rel="stylesheet" href="/static/styles/index.css">
    <% } %>

    <% if (urlPath.includes("posts")) { %>
        <link rel="stylesheet" href="/static/styles/posts/index.css">
    <% } %>

    <% if (urlPath.match("posts/")) { %>
        <link rel="stylesheet" href="/static/styles/posts/map.css">
    <% } %>

    <% if (urlPath.includes("dashboard")) { %>
        <link rel="stylesheet" href="/static/styles/dashboard/stats-tab.css">
    <% } %>
</head>

<body class="d-flex flex-column justify-content-between">
    <%- include("./partials/navbar.ejs")%>
    <main class="container my-4 min-vh-100">
        <%- body -%>
    </main>
    <%- include("./partials/footer.ejs")%>

    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>

    <% if (urlPath === "/" ) { %>
        <script defer src="/static/scripts/index.js"></script>
    <% } %>

    <% if (urlPath && urlPath.includes("posts") || urlPath.includes("users")) { %>
        <script defer src="/static/scripts/validation.js"></script>
        <% if (urlPath && urlPath.includes("new") || urlPath.includes("edit")) { %>
            <script defer src="/static/scripts/location-field.js"></script>
            <script defer src="/static/scripts/posts/rules.js"></script>
        <% } %>
    <% } %>


    <% if (urlPath && urlPath.includes("password_reset")) { %>
        <script defer src="/static/scripts/validate-equality-psw.js"></script>
    <% } %>
</body>

</html>
